<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Version>1.0.0.0</Version>
    <Authors>Andres Traks, Faolan</Authors>
    <Company />
    <PackageLicenseUrl>https://github.com/AndresTraks/BulletSharpPInvoke/blob/master/BulletSharp/license.txt</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/RhubarbVR/BulletSharpPInvoke</PackageProjectUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageIconUrl>https://raw.githubusercontent.com/AndresTraks/BulletSharp/gh-pages/images/bullet_logo_64x64.png</PackageIconUrl>
    <Description>.NET wrapper for the Bullet physics engine 
Forked from https://github.com/AndresTraks/BulletSharpPInvoke </Description>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <PackageIcon>RhubarbVR2_1149.png</PackageIcon>
    <PackageId>Rhu$(AssemblyName)</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="demos\**" />
    <Compile Remove="test\**" />
    <EmbeddedResource Remove="demos\**" />
    <EmbeddedResource Remove="test\**" />
    <None Remove="demos\**" />
    <None Remove="test\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Properties\AssemblyInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="runtimes\linux-arm64\native\liblibbulletc.so" />
    <None Remove="runtimes\linux-x64\native\liblibbulletc.so" />
    <None Remove="runtimes\win-x64\native\libbulletc.dll" />
    <None Remove="runtimes\win10-x64\native\libbulletc.dll" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="runtimes\linux-arm64\native\liblibbulletc.so">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="runtimes\linux-x64\native\liblibbulletc.so">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="runtimes\win-x64\native\libbulletc.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="runtimes\win10-x64\native\libbulletc.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
	
  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
    <None Update="RhubarbVR2_1149.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
